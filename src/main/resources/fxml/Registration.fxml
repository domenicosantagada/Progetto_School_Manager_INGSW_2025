<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0"
            prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.RegistrationController">

    <stylesheets>
        <URL value="@../css/registration.css"/>
    </stylesheets>

    <center>
        <VBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="25.0"
              BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="100.0"
                      prefWidth="100.0" spacing="25.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label text="Username">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="usernameField" maxHeight="-Infinity" maxWidth="-Infinity"
                                           minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0"
                                           prefWidth="170.0"/>
                            </children>
                        </VBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="16.0" prefWidth="400.0" spacing="60.0">
                            <children>
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="Nome">
                                            <font>
                                                <Font name="System Bold" size="13.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="nameField" minHeight="-Infinity" minWidth="-Infinity"
                                                   prefHeight="30.0" prefWidth="170.0"/>
                                    </children>
                                </VBox>
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="Cognome">
                                            <font>
                                                <Font name="System Bold" size="13.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="surnameField" minHeight="-Infinity" minWidth="-Infinity"
                                                   prefHeight="30.0" prefWidth="170.0"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </VBox>
                <VBox minHeight="-Infinity" prefHeight="45.0" prefWidth="400.0">
                    <children>
                        <Label text="Data di nascita">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="datePicker" prefHeight="30.0" prefWidth="170.0">
                            <VBox.margin>
                                <Insets top="9.0" right="0.0" bottom="0.0" left="0.0"/>
                            </VBox.margin>
                        </DatePicker>
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="31.0" prefWidth="400.0" spacing="60.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label text="Codice iscrizione">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="codiceIscrizione" maxHeight="-Infinity" maxWidth="-Infinity"
                                           minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0"
                                           prefWidth="170.0"/>
                            </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Label fx:id="materiaLabel" minWidth="-Infinity" prefHeight="16.0" prefWidth="170.0"
                                       text="Materia">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="materiaChoiceBox" prefHeight="30.0" prefWidth="170.0"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox prefHeight="50.0" prefWidth="200.0" spacing="60.0">
                    <children>
                        <VBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" prefWidth="100.0">
                            <children>
                                <Label text="Password">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity"
                                               minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0"
                                               prefWidth="170.0"/>
                            </children>
                        </VBox>
                        <VBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" prefWidth="100.0">
                            <children>
                                <Label text="Ripeti password">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
                                <PasswordField fx:id="repeatPasswordField" maxHeight="-Infinity" maxWidth="-Infinity"
                                               minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0"
                                               prefWidth="170.0"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Button fx:id="registerButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#registerClicked" prefHeight="40.0"
                        prefWidth="120.0" text="Registrati">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="30.0" left="20.0" right="20.0" top="20.0"/>
            </BorderPane.margin>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </center>
    <left>
        <BorderPane fx:id="leftPanel" prefHeight="200.0" prefWidth="200.0"
                    style="-fx-background-color: linear-gradient(to bottom, #E3F2FD, #90CAF9);"
                    BorderPane.alignment="CENTER">
            <center>
                <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fx:id="logoView" fitHeight="271.0" fitWidth="287.0" layoutX="28.0" layoutY="37.0"
                                   pickOnBounds="true" preserveRatio="true"/>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="10" left="50" right="50" top="10"/>
                    </BorderPane.margin>
                </VBox>
            </center>
            <top>
                <FontAwesomeIcon iconName="ARROW_LEFT" size="30" onMouseClicked="#backButtonClicked"
                                 BorderPane.alignment="CENTER_LEFT">
                    <BorderPane.margin>
                        <Insets left="5.0" top="5.0"/>
                    </BorderPane.margin>
                </FontAwesomeIcon>

            </top>

        </BorderPane>
    </left>
</BorderPane>

