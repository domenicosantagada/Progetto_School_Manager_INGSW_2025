<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="application.controller.studente.AssenzeStudenteController">
    <stylesheets>
        <URL value="@../../css/assenze.css"/>
    </stylesheets>
    <children>
        <BorderPane fx:id="mainPane" prefHeight="760.0" prefWidth="1050.0">
            <top>
                <BorderPane styleClass="topPane" BorderPane.alignment="CENTER">
                    <left>
                        <Label styleClass="titolo" text="Le mie Assenze" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets left="20.0"/>
                            </BorderPane.margin>
                        </Label>
                    </left>
                    <right>
                        <FontAwesomeIcon iconName="ARROW_LEFT" onMouseClicked="#backClicked" size="30"
                                         styleClass="iconaFreccia" wrappingWidth="33.85714340209961"
                                         BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets right="20.0"/>
                            </BorderPane.margin>
                        </FontAwesomeIcon>
                    </right>
                    <padding>
                        <Insets bottom="20.0" top="20.0"/>
                    </padding>
                </BorderPane>
            </top>
            <center>
                <VBox spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <TableView fx:id="assenzeTable" prefHeight="500.0" prefWidth="1010.0" styleClass="tabella">
                            <columns>
                                <TableColumn fx:id="dataColumn" prefWidth="150.0" text="Data"/>
                                <TableColumn fx:id="motivazioneColumn" prefWidth="500.0" text="Motivazione"/>
                                <TableColumn fx:id="giustificataColumn" prefWidth="150.0" text="Giustificata"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <children>
                                <Button fx:id="giustificaButton" mnemonicParsing="false" onAction="#giustificaClicked"
                                        styleClass="buttons" text="Giustifica"/>
                            </children>
                            <VBox.margin>
                                <Insets right="20.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
            </center>
        </BorderPane>
        <BorderPane fx:id="giustificaPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" prefHeight="300.0" prefWidth="500.0" styleClass="compitiPane" visible="false">
            <top>
                <Label styleClass="titolo" text="Inserisci Giustificazione" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0"/>
                    </BorderPane.margin>
                </Label>
            </top>
            <center>
                <TextArea fx:id="motivazioneArea" prefHeight="200.0" prefWidth="200.0"
                          promptText="Inserisci la motivazione..." styleClass="textArea" wrapText="true"
                          BorderPane.alignment="CENTER"/>
            </center>
            <bottom>
                <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#confermaGiustificaClicked" styleClass="buttons"
                                text="Conferma"/>
                        <Button mnemonicParsing="false" onAction="#annullaGiustificaClicked" styleClass="buttons"
                                text="Annulla"/>
                    </children>
                    <BorderPane.margin>
                        <Insets top="10.0"/>
                    </BorderPane.margin>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
